{
  "private": true,
  "name": "parijat-frontend",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "storybook": "start-storybook",
    "build": "NODE_ENV=production preact build",
    "serve": "node server.js",
    "dev": "preact watch",
    "test": "mocha --require babel-polyfill --require babel-register",
    "lint": "eslint src",
    "test:e2e": "node_modules/cucumber/bin/cucumber-js --require test/acceptance/index.js --require test/acceptance/stepDefinitions -f node_modules/cucumber-pretty "
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "no-unused-vars": "warn",
      "react/sort-comp": "off",
      "lines-around-comment": "off",
      "react/prefer-stateless-function": "off"
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "cucumber": "^5.1.0",
    "cucumber-pretty": "^1.5.2",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "@storybook/preact": "^5.0.4",
    "core-js": "3",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "expect": "^23.1.0",
    "if-env": "^1.0.0",
    "mocha": "^5.2.0",
    "nightwatch": "^1.2.4",
    "nightwatch-api": "^2.3.0",
    "superstatic": "^5.0.1",
    "preact-cli": "^3.0.0-rc.7",
    "pushstate-server": "^3.1.0"
  },
  "dependencies": {
    "lodash": "^4.17.5",
    "preact": "^8.5.2",
    "preact-compat": "^3.17.0",
    "preact-material-components": "^1.4.0",
    "preact-redux": "^2.1.0",
    "preact-router": "^2.5.5",
    "react-autocomplete": "^1.8.1",
    "react-render-html": "^0.6.0",
    "redux": "^4.0.4",
    "searchkit": "^2.3.0"
  }
}
